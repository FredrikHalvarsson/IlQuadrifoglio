<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Register</title>
    <!-- Add your CSS stylesheets here -->
</head>
<body>
    <h2>Register</h2>
    <form id="registerForm" method="post" asp-controller="Account" asp-action="Register">
        <div>
            <label for="email">Email:</label>
            <input type="email" id="email" name="email" required>
            <input type="hidden" id="username" name="username"> <!-- Hidden input field for username -->
        </div>
        <div>
            <label for="password">Password:</label>
            <input type="password" id="password" name="password" required>
        </div>
        <div>
            <label for="confirmPassword">Confirm Password:</label>
            <input type="password" id="confirmPassword" name="confirmPassword" required>
        </div>
        <button type="submit">Register</button>
    </form>

    <script>
        // Set the value of the hidden username field to the email address
        document.getElementById('email').addEventListener('input', function () {
            document.getElementById('username').value = this.value;
        });
    </script>
</body>
</html>
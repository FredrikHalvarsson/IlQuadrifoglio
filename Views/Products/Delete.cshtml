@model IlQuadrifoglio.Models.Product

@{
    ViewData["Title"] = "Delete Product";
}

<div class="container">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card mt-4">
                <div class="card-header">
                    <h2>Delete Product</h2>
                </div>
                <div class="card-body">
                    <p>Are you sure you want to delete this product?</p>
                    <p><strong>Name:</strong> @Model.ProductName</p>
                    <p><strong>Description:</strong> @Model.ProductDescription</p>
                    <p><strong>Price:</strong> @Model.Price kr</p>
                </div>
                <div class="card-footer">
                    <form asp-action="DeleteConfirmed" asp-route-id="@Model.ProductId" method="post">
                        <button type="submit" class="btn btn-danger">Delete</button>
                        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
@model IlQuadrifoglio.Models.Product

@{
    ViewData["Title"] = "Create Product";
}

<h1>Create New Product</h1>

<div class="container">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <form asp-action="Create" method="post" class="form-horizontal">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group">
                    <label asp-for="ProductName" class="control-label"></label>
                    <input asp-for="ProductName" class="form-control" />
                    <span asp-validation-for="ProductName" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="ProductDescription" class="control-label"></label>
                    <input asp-for="ProductDescription" class="form-control" />
                    <span asp-validation-for="ProductDescription" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Price" class="control-label"></label>
                    <input asp-for="Price" class="form-control" />
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="ProductType" class="control-label"></label>
                    <select asp-for="ProductType" class="form-control" asp-items="Html.GetEnumSelectList<IlQuadrifoglio.Models.Type>()"></select>
                    <span asp-validation-for="ProductType" class="text-danger"></span>
                </div>

                <div class="form-group form-check">
                    <input asp-for="IsSpecial" class="form-check-input" />
                    <label asp-for="IsSpecial" class="form-check-label"></label>
                </div>

                <div class="form-group">
                    <button type="submit" class="btn btn-primary">Create</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
